{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "NestJS Debug",
      "program": "${workspaceFolder}/src/main.ts", // Entry point of your app
      "preLaunchTask": "tsc: build - tsconfig.json", // If you're using TypeScript, this compiles your app before launching
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
